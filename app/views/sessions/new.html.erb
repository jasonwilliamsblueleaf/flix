<header id="content-header">
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
	<fieldset>
		<ol>
			<li class="required">
				<%= label_tag :username %>
				<%= text_field_tag :username, nil, autofocus: true %>
			</li>
			<li class="required">
				<%= label_tag :password %>
				<%= password_field_tag :password, nil %>
			</li>
			<li>
				<%= submit_tag "Sign In" %>
			</li>
		</ol>
	</fieldset>
<% end %>